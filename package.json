{
  "name": "tonic",
  "version": "1.0.0",
  "description": "",
  "author": "Mike Fix <mrfix84@gmail.com> (dawnlabs.io)",
  "license": "ISC",
  "repository": "https://github.com/mfix22/tonic.git",
  "scripts": {
    "dev": "nodemon --exec \"npm start\"",
    "start": "PRIVATE_KEY=$(echo $PRIVATE_KEY | base64 -d) probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "redis:clear": "redis-cli flushall",
    "deploy": "now --public"
  },
  "dependencies": {
    "bee-queue": "^1.2.2",
    "moment": "^2.22.1",
    "ms": "^2.1.1",
    "probot": "^6.0.0",
    "smee-client": "^1.0.1"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "nodemon": "^1.17.2",
    "now": "^11.1.7",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "now": {
    "env": {
      "NODE_ENV": "production",
      "PRIVATE_KEY": "@issues_private_key",
      "APP_ID": "@issues_app_id",
      "WEBHOOK_SECRET": "@issues_secret",
      "WEBHOOK_PROXY_URL": "@issues_webhook_proxy_url",
      "REDIS_HOST": "@issues_redis_host",
      "REDIS_PORT": "@issues_redis_port",
      "REDIS_PASSWORD": "@issues_redis_password"
    }
  }
}
