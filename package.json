{
  "name": "ranger",
  "version": "0.0.76",
  "description": "",
  "author": "Mike Fix",
  "license": "UNLICENSED",
  "repository": "https://github.com/mfix22/ranger.git",
  "scripts": {
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./index.js",
    "test": "jest",
    "lint": "eslint src",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "redis:clear": "redis-cli flushall",
    "deploy": "git push heroku master",
    "site": "cd site && live-server"
  },
  "dependencies": {
    "@sentry/node": "^5.10.2",
    "async-sema": "^3.1.0",
    "bad-words": "^3.0.3",
    "bee-queue": "^1.2.2",
    "lodash.merge": "^4.6.2",
    "moment": "^2.24.0",
    "ms": "^2.1.1",
    "probot": "9.8.1",
    "rexrex": "^1.3.0",
    "smee-client": "^1.0.1",
    "windsor-node": "^0.0.3"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.19.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "live-server": "^1.2.1",
    "nock": "^11.7.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --write",
      "git add"
    ]
  }
}
